<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -File Uploader</title>

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <header>

            @{
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
            }
            @if (currentAction != null)
            {
                <h1 class="mt-5">File Uploader</h1>
                @if (currentAction == "Index") // Check if currentAction is empty or null

                {

                    <a class="btn btn-primary" href="/UploadUsingCronJob">Merge Using CronJob</a>
                }
                else
                {

                    <a class="btn btn-primary" href="/">Merge Using Class library</a> <!-- Print current action -->
                }
            }

        </header>

        <!-- Main Content -->
        <div class="row pt-4">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>


    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
